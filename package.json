{
  "name": "mapgl-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bash -c 'rm -rf .next && next dev'",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "analyze": "ANALYZE=true next build",
    "pre-deploy": "npm run type-check && npm run lint && npm run build",
    "prepare": "husky"
  },
  "dependencies": {
    "@2gis/mapgl": "^1.62.0",
    "immer": "^10.1.1",
    "motion": "^12.23.12",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-modal-sheet": "^4.4.0",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  }
}
